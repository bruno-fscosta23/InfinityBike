<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_splash"
    android:orientation="vertical"
    tools:context=".DadosAgendamento_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/idToobarDadosAgendamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_toobar">

        <Button
            android:id="@+id/btnFecharDados"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_close_dados" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="AGENDAMENTO"
            android:textStyle="bold"
            android:textColor="#000"/>

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/idLoginUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/fundo_email"
        android:text="usuario@usuario.com.br"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/idTipoServiçoAgenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="170dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/fundo_email"
        android:text="Tipo de Serviço" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="270dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/fundo_email"
        android:text="Endeço da Bicicletaria" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="340dp"
        android:text="Data: "
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/idDataAgenda"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="375dp"
        android:background="@drawable/fundo_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="267dp"
        android:layout_marginTop="340dp"
        android:text="Hora: "
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/idHoraAgenda"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="267dp"
        android:layout_marginTop="375dp"
        android:background="@drawable/fundo_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="440dp"
        android:text="Descrição: "
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/idDescAgenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="480dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/fundo_email" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>