<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DadosAgendamento_Activity"
    android:orientation="vertical"
    android:background="@drawable/fundo_splash">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/idToobarDadosAgendamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_toobar">

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_close_dados"
            android:id="@+id/btnFecharDados"
            />

        <TextView
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:text="Agendamento"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dados Agendamento"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:textSize="29sp"
        android:textColor="#000"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>